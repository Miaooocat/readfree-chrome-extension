{
    "manifest_version": 2,

    "name": "ReadFree 传送门",
    "description": "ReadFree 电子书传送门",
    "version": "2.5",
    "icons": {
        "48": "favicon48.png",
        "128": "favicon128.png"
    },

    "content_scripts": [{
        "matches": ["*://book.douban.com/*", "*://www.douban.com/*", "*://www.amazon.cn/*"],
        "js": ["show.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "http://readfree.me/*",
        "https://api.douban.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
